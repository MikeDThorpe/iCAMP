<% layout('../layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title"> Title </label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">
          Looks Good!
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location"> Location </label>
        <input
          class="form-control"
          type="text"
          id="Location"
          name="campground[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="Image"> Image URL </label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location"> Description </label>
        <textarea
          class="form-control"
          id="description"
          name="campground[description]"
          required
        ></textarea>
      </div>
      <div class="input-group mb-3">
        <span id="price-label" class="input-group-text">Â£</span>
        <input
          placeholder="Campground Price"
          type="text"
          class="form-control"
          name="campground[price]"
          id="price"
          aria-describedby="price-label"
          required
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add campground</button>
      </div>
    </form>
  </div>
</div>
